{
  "name": "otterbot_discord",
  "version": "1.0.0",
  "description": "A Discord bot that posts a picture of an otter each day",
  "engines": { "node": "16.15.1" },
  "main": "build/index.js",
  "scripts": {
    "start": "node build/index.js",
    "postinstall": "tsc",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w",
    "deploy": "git add . && git commit -m Heroku && git push heroku master",

    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DailyOtterBot/OtterBotDiscord.git"
  },
  "author": "KwiiHours",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DailyOtterBot/OtterBotDiscord/issues"
  },
  "homepage": "https://github.com/DailyOtterBot/OtterBotDiscord#readme",
  "dependencies": {
    "@discordjs/builders": "^0.15.0",
    "@discordjs/rest": "^0.5.0",
    "discord-api-types": "^0.36.1",
    "discord.js": "^13.8.1",
    "firebase-admin": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.3",
    "nodemon": "^2.0.19",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  }
}
